APP_ENV=dev
APP_URL=http://localhost:8080
APP_DOMAIN=localhost

DB_HOST=db
DB_PORT=3306
DB_NAME=dueldesk
DB_USER=dueldesk
DB_PASSWORD=dueldesk
DB_ROOT_PASSWORD=root

# Game images (admin uploads)
GAME_IMAGE_WIDTH=512
GAME_IMAGE_HEIGHT=512

# Discord OAuth2 (link account) - https://discord.com/developers/applications
# Configure the Redirect URI in your Discord application (ex: http://localhost:8080/account/discord/callback)
DISCORD_CLIENT_ID=
DISCORD_CLIENT_SECRET=
DISCORD_REDIRECT_URI=

# Discord bot/webhook (optional)
# Bot needs permission to manage roles in the guild.
DISCORD_BOT_TOKEN=
DISCORD_GUILD_ID=
DISCORD_ROLE_ID_PARTICIPANT=

# Discord announcements via webhook (optional)
DISCORD_WEBHOOK_URL=

# Internal bot -> site API (used by the Discord bot service)
BOT_API_TOKEN=

# Discord bot (docker service) - URLs
# Internal URL is used by the bot container to call the site API over the docker network.
BOT_INTERNAL_URL=http://nginx
BOT_PUBLIC_URL=http://localhost:8080
